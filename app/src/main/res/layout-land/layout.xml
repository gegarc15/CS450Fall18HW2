<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GameFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            // Column 1: Text

            <TextView
                android:layout_column="0"
                android:layout_row="0"
                android:layout_marginLeft="130dp"
                android:layout_marginTop="20dp"
                android:text="@string/wins" />

            <TextView
                android:layout_column="0"
                android:layout_row="1"
                android:layout_marginLeft="130dp"
                android:layout_marginTop="10dp"
                android:text="@string/loss" />

            <TextView
                android:layout_column="0"
                android:layout_row="2"
                android:layout_marginLeft="130dp"
                android:layout_marginTop="10dp"
                android:text="@string/total" />


            // Column 2: Score

            <TextView
                android:layout_column="1"
                android:layout_row="0"
                android:layout_marginLeft="120dp"
                android:layout_marginTop="20dp"
                android:text="@string/win_score" />

            <TextView
                android:layout_column="1"
                android:layout_row="1"
                android:layout_marginLeft="120dp"
                android:layout_marginTop="10dp"
                android:text="@string/loss_score" />

            <TextView
                android:layout_column="1"
                android:layout_row="2"
                android:layout_marginLeft="120dp"
                android:layout_marginTop="10dp"
                android:text="@string/total_score" />

            // Column 3: Percentages

            <TextView
                android:layout_column="2"
                android:layout_row="0"
                android:layout_marginLeft="130dp"
                android:layout_marginTop="20dp"
                android:text="@string/win_percent" />

            <TextView
                android:layout_column="2"
                android:layout_row="1"
                android:layout_marginLeft="130dp"
                android:layout_marginTop="10dp"
                android:text="@string/loss_percent" />

            <TextView
                android:layout_column="2"
                android:layout_row="2"
                android:layout_marginLeft="130dp"
                android:layout_marginTop="10dp"
                android:text="@string/total_percent" />

        </GridLayout>

        // "Choose a Door"

        <TextView
            android:id="@+id/prompt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/choose_a_door"
            android:textSize="26sp"
            android:textAlignment="center" />

        <include
            layout="@layout/doors"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />

    </LinearLayout>

    <!-- TODO: Update blank fragment layout -->


</FrameLayout>